// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ===========================
// USER & AUTHENTICATION
// ===========================

model User {
  id           Int        @id @default(autoincrement())
  name         String
  email        String     @unique
  passwordHash String
  globalRole   GlobalRole @default(MEMBER)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  // Relations
  projectMembers   ProjectMember[]
  createdProjects  Project[]        @relation("ProjectCreator")
  createdCards     Card[]           @relation("CardCreator")
  assigneeCards    Card[]           @relation("CardAssignee")
  comments         Comment[]
  timeLogs         TimeLog[]
  assignedSubtasks Subtask[]        @relation("SubtaskAssignee")
  assignedCards    CardAssignment[] @relation("AssignedCards")
  assignedByCards  CardAssignment[] @relation("AssignedByCards")
  accounts         Account[]
  sessions         Session[]

  @@map("users")
}

// NextAuth tables
model Account {
  id                String  @id @default(cuid())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ===========================
// PROJECT MANAGEMENT
// ===========================

model Project {
  id          Int       @id @default(autoincrement())
  name        String
  description String?   @db.Text
  createdBy   Int
  isCompleted Boolean   @default(false)
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  creator User            @relation("ProjectCreator", fields: [createdBy], references: [id], onDelete: Cascade)
  members ProjectMember[]
  boards  Board[]

  @@map("projects")
}

model ProjectMember {
  id          Int         @id @default(autoincrement())
  projectId   Int
  userId      Int
  projectRole ProjectRole
  joinedAt    DateTime    @default(now())

  // Relations
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  project         Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  cardAssignments CardAssignment[]

  @@unique([projectId, userId])
  @@map("project_members")
}

// ===========================
// BOARD & KANBAN
// ===========================

model Board {
  id        Int      @id @default(autoincrement())
  projectId Int
  name      String
  position  Int      @default(0)
  createdAt DateTime @default(now())

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  cards   Card[]

  @@map("boards")
}

model Card {
  id          Int       @id @default(autoincrement())
  boardId     Int
  title       String
  description String?   @db.Text
  priority    Priority  @default(MEDIUM)
  status      Status    @default(TODO)
  dueDate     DateTime?
  createdBy   Int
  assigneeId  Int?
  approvedBy  Int?
  position    Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  board       Board            @relation(fields: [boardId], references: [id], onDelete: Cascade)
  creator     User             @relation("CardCreator", fields: [createdBy], references: [id], onDelete: Cascade)
  assignee    User?            @relation("CardAssignee", fields: [assigneeId], references: [id], onDelete: SetNull)
  subtasks    Subtask[]
  comments    Comment[]
  timeLogs    TimeLog[]
  assignments CardAssignment[]

  @@map("cards")
}

model CardAssignment {
  id              Int       @id @default(autoincrement())
  cardId          Int
  assignedTo      Int // User yang di-assign
  assignedBy      Int // Leader/Admin yang assign
  projectMemberId Int // Ensure assignedTo is project member
  assignedAt      DateTime  @default(now())
  unassignedAt    DateTime?
  reason          String?   @db.Text // Reason for assignment/unassignment
  isActive        Boolean   @default(true) // Current assignment

  // Relations
  card          Card          @relation(fields: [cardId], references: [id], onDelete: Cascade)
  assignee      User          @relation("AssignedCards", fields: [assignedTo], references: [id], onDelete: Cascade)
  assigner      User          @relation("AssignedByCards", fields: [assignedBy], references: [id], onDelete: Cascade)
  projectMember ProjectMember @relation(fields: [projectMemberId], references: [id], onDelete: Cascade)

  @@index([cardId, isActive])
  @@index([assignedTo, isActive])
  @@map("card_assignments")
}

model Subtask {
  id         Int      @id @default(autoincrement())
  cardId     Int
  title      String
  status     Status   @default(TODO)
  assigneeId Int?
  position   Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  card     Card  @relation(fields: [cardId], references: [id], onDelete: Cascade)
  assignee User? @relation("SubtaskAssignee", fields: [assigneeId], references: [id], onDelete: SetNull)

  @@map("subtasks")
}

// ===========================
// COLLABORATION & TRACKING
// ===========================

model Comment {
  id        Int      @id @default(autoincrement())
  cardId    Int
  userId    Int
  text      String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  card Card @relation(fields: [cardId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("comments")
}

model TimeLog {
  id              Int       @id @default(autoincrement())
  cardId          Int
  userId          Int
  startTime       DateTime
  endTime         DateTime?
  durationMinutes Int?
  notes           String?   @db.Text
  createdAt       DateTime  @default(now())

  // Relations
  card Card @relation(fields: [cardId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("time_logs")
}

// ===========================
// ENUMS
// ===========================

enum GlobalRole {
  ADMIN
  LEADER
  MEMBER
}

enum ProjectRole {
  LEADER
  DEVELOPER
  DESIGNER
  OBSERVER
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum Status {
  TODO
  IN_PROGRESS
  REVIEW
  DONE
}
